            { title: "URBAN PULSE", type: "short", dir: "Sarah J.", dur: "22m", lang: "English", img: "https://picsum.photos/seed/city/500/750" },
            { title: "SILENT ECHO", type: "short", dir: "Michael B.", dur: "10m", lang: "No Dialogue", img: "https://picsum.photos/seed/silent/500/750" },
